                    android:onClick="onRadioButtonClickedTodos"
                    android:text="Pagas"
                    android:textSize="10sp" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGroupTodosPorCredor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
