<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ContrLaytEdit_Add_Div_A_Rec"
    android:layout_marginLeft="0sp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="0sp"
    android:orientation="vertical"
    tools:context=".DividasAReceber">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewListaDividas_Rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="16dp"
        app:adSize="LARGE_BANNER"
        app:adUnitId="@string/banner_div_receber"
        app:layout_constraintBottom_toTopOf="@+id/textViewlel_Rec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </com.google.android.gms.ads.AdView>

    <CheckBox
        android:id="@+id/checkB_DiV_Rec"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:checked="false"
        android:duplicateParentState="false"
        android:text="Ok"
        android:textColor="@color/cardview_light_background"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="293dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/textViewlel_Rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/contornofino"
        android:elevation="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textAdd_Div_Rec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:paddingLeft="20dp"
                android:text="Adicionar Dívida"
                android:textAllCaps="false"
                android:textColor="@color/primaryTextColor"
                android:textSize="21dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textEdit_Div_Rec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Alterar dívida"
                android:textAllCaps="false"
                android:textColor="@color/primaryTextColor"
                android:textSize="21dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/listTarefas_But_Rec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:elevation="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtId_Div_Rec"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:ems="10"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/edtNovaList_DS_Rec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout7_Rec"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView25_Rec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dívida"
                            android:textSize="10sp" />

                        <EditText
                            android:id="@+id/edtNovaList_Div_Rec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Descrição da dívida"
                            android:inputType="textCapSentences"
                            android:nextFocusDown="@+id/edtNomeCliente_Div_Rec"
                            android:paddingLeft="15dp"
                            android:selectAllOnFocus="true"
                            android:singleLine="true"
                            android:textColorHighlight="?attr/colorPrimary"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/textView25"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dívida"
                            android:textSize="10sp" />

                        <EditText
                            android:id="@+id/edtNovaDivParc_Rec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Dívida"
                            android:inputType="textCapSentences"
                            android:nextFocusDown="@+id/edtValor_Div_Rec"
                            android:paddingLeft="20dp"
                            android:selectAllOnFocus="true"
                            android:singleLine="true"
                            android:textColorHighlight="?attr/colorPrimary"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nome do Cliente"
                            android:textSize="10sp" />

                        <EditText
                            android:id="@+id/edtNomeCliente_Div_Rec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Informe o nome do cliente"
                            android:inputType="textCapSentences"
                            android:nextFocusDown="@+id/edtDataVenc_Div_Rec"
                            android:paddingLeft="15dp"
                            android:selectAllOnFocus="true"
                            android:singleLine="true"
                            android:textColorHighlight="?attr/colorPrimary"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Vencimento"
                            android:textSize="10sp" />

                        <EditText
                            android:id="@+id/edtDataVenc_Div_Rec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Vencimento"
                            android:inputType="date"
                            android:nextFocusDown="@+id/edtDataDiv_Rec"
                            android:selectAllOnFocus="true"
                            android:textColorHighlight="?attr/colorPrimary"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/edtDataDia_Rec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="dia"
                            android:inputType="date"
                            android:paddingLeft="15dp"
                            android:selectAllOnFocus="true"
                            android:textColorHighlight="?attr/colorPrimary"
                            android:textSize="16sp"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/edtDataMes_Rec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="mes"
                            android:inputType="date"
                            android:paddingLeft="15dp"
                            android:selectAllOnFocus="true"
                            android:textColorHighlight="?attr/colorPrimary"
                            android:textSize="16sp"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/edtDataAno_Rec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Ano"
                            android:inputType="date"
                            android:paddingLeft="15dp"
                            android:selectAllOnFocus="true"
                            android:textColorHighlight="?attr/colorPrimary"
                            android:textSize="16sp"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/edtDataMutiplicada_Rec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="VENCIMENTO"
                            android:inputType="date"
                            android:paddingLeft="15dp"
                            android:selectAllOnFocus="true"
                            android:textColorHighlight="?attr/colorPrimary"
                            android:textSize="16sp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnDataVenc_Div_Rec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:background="?attr/selectableItemBackground"
                        app:srcCompat="@drawable/baseline_date_range_black_36" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emissão"
                            android:textSize="10sp" />

                        <EditText
                            android:id="@+id/edtDataDiv_Rec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:nextFocusDown="@+id/listTarefas_But_Rec"
                            android:hint="Emissão"
                            android:inputType="date"
                            android:selectAllOnFocus="true"
                            android:textColorHighlight="?attr/colorPrimary"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnDataDiv_Rec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:background="?attr/selectableItemBackground"
                        app:srcCompat="@drawable/baseline_date_range_black_36" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Valor"
                            android:textSize="10sp" />

                        <EditText
                            android:id="@+id/edtValor_Div_Rec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:hint="Valor  "
                            android:inputType="numberDecimal"
                            android:nextFocusDown="@+id/edtParcelasDiv_Rec"
                            android:selectAllOnFocus="true"
                            android:singleLine="true"
                            android:textColorHighlight="?attr/colorPrimary"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lineraLParc_Rec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Parcelas"
                            android:textSize="10sp" />

                        <EditText
                            android:id="@+id/edtParcelasDiv_Rec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:inputType="numberDecimal"
                            android:selectAllOnFocus="true"
                            android:text="01"
                            android:textColorHighlight="?attr/colorPrimary"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout7_Rec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/contornofino"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/butonVoltar_Div_Rec"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:elevation="10dp"
                        android:text="voltar"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/contornofino"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnEdit_Div_Rec"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:elevation="10dp"
                        android:onClick="onClick"
                        android:text="@string/title_updt_button"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:ignore="OnClick" />

                    <Button
                        android:id="@+id/btnSalvar_Div_Rec"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:elevation="10dp"
                        android:onClick="onClick"
                        android:text="SALVAR"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:ignore="OnClick" />

                    <Button
                        android:id="@+id/btnSalvarParc_Rec"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:elevation="10dp"
                        android:onClick="onClick"
                        android:text="SALVAR"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:ignore="OnClick" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>